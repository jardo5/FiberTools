<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" id="creditsPane" fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity"
           minHeight="-Infinity" minWidth="-Infinity" prefHeight="250" prefWidth="300"
           stylesheets="@lossBudgetCalculator.css" xmlns="http://javafx.com/javafx/19"
           fx:controller="com.fibertools.controllers.CreditsController">
    <children>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
            <children>
                <Text fill="#e5e4e2" strokeType="OUTSIDE" strokeWidth="0.0" text="CREDITS"/>
                <Text fill="#e5e4e2" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="ANSI/TIA/EIA-568-C.3 and ISO/IEC 11801:2002"/>
                <Hyperlink onAction="#openFlukeLossCalc" text="Fluke Networks Loss Calculator" textAlignment="CENTER"
                           underline="true"/>
                <Hyperlink onAction="#openCorningLossCalc" text="Corning Loss Calculator" underline="true"/>
                <Hyperlink onAction="#openFOAStanard" text="The FOA Standard" underline="true"/>
                <MFXButton id="customDeleteButton" onAction="#onClickExit" text="Exit"/>
            </children>
        </VBox>
    </children>
</StackPane>
